import os
Import('*')

projectName='app'
sampleApplicationEnv = env.Clone()
sampleApplicationEnv.Append(LIBS=['module1'])
sampleApplicationEnv.Append(LIBPATH=[os.path.join(buildDir, 'module1')])
print sampleApplicationEnv.Dump('LIBS') # This is the syntax necessary to look at the SCons environment variables

sampleApplication = sampleApplicationEnv.Program(projectName, Glob('*.cpp'))

Default(sampleApplication)
Default(sampleApplicationEnv.Install(binDir, sampleApplication))
